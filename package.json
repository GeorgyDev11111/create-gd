{
  "name": "create-gd",
  "version": "0.0.0",
  "author": "Anufriev Georgy",
  "homepage": "https://github.com/GeorgyDev11111/create-gd",
  "repository": "https://github.com/GeorgyDev11111/create-gd",
  "main": "bin/index.js",
  "license": "MIT",
  "type": "module",
  "bin": {
    "create-gd": "bin/index.js"
  },
  "files": [
    "dist",
    "templates",
    "bin"
  ],
  "scripts": {
    "watchcoffee": "coffee -wco ./dist/index.mjs ./src/index.coffee",
    "nodemon": "nodemon index.js",
    "compile": "coffee -co ./dist/index.mjs ./src/index.coffee",
    "minify": "esbuild ./dist/index.mjs --bundle --minify --outfile=./dist/index.mjs --allow-overwrite",

    "dev": "npm-run-all --parallel watchcoffee nodemon",
    "prePublish": "npm-run-all compile minify"
  },
  "devDependencies": {
    "coffeescript": "^2.7.0",
    "esbuild": "^0.15.16",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5"
  }
}
